- job:
    name: 'cccp-index'
    description: |
        Managed by Jenkins Job Builder, do not edit manually!
    node: master
    scm:
        - git:
            url: "{{ cccp_index_repo }}"
            branches:
                - "origin/master"
            skip-tag: True
    triggers:
        - pollscm: "H/10 * * * *"
    builders:
        - shell: |
            CWD=`pwd`
            cd /opt/cccp-service/jenkinsbuilder
            PYTHONPATH=/opt/cccp-service python cccp_index_reader.py $CWD/index.d
            cd /opt/cccp-service/
            python manage.py fetchimagelist $CWD/index.d

- job:
    name: 'weekly-image-scan'
    description: |
        Managed by Jenkins Job Builder, do not edit manually!
    node: master
    scm:
        - git:
            url: "{{ cccp_index_repo }}"
            skip-tag: True
    triggers:
        - timed: "59 23 * * 6"
    builders:
        - shell: |
            export CWD=`pwd`
            cd /opt/cccp-service/jenkinsbuilder
            python weekly-scan.py $CWD/index.d
